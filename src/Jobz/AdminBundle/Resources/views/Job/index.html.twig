{% extends "AdminBundle::layout.html.twig" %}

{% block section %}
    <h1>Jobs list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Jobtype</th>
                <th>Company</th>
                <th>Url</th>
                <th>Position</th>
                <th>Location</th>
                <th>Description</th>
                <th>Howtoapply</th>
                <th>Email</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td><a href="{{ path('jobz_admin_job_show', { 'id': job.id }) }}">{{ job.id }}</a></td>
                <td>{{ job.jobType }}</td>
                <td>{{ job.company }}</td>
                <td>{{ job.url }}</td>
                <td>{{ job.position }}</td>
                <td>{{ job.location }}</td>
                <td>{{ job.description }}</td>
                <td>{{ job.howToApply }}</td>
                <td>{{ job.email }}</td>
                <td>{% if job.createdAt %}{{ job.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if job.updatedAt %}{{ job.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('jobz_admin_job_show', { 'id': job.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('jobz_admin_job_edit', { 'id': job.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('jobz_admin_job_new') }}">Create a new job</a>
        </li>
    </ul>
{% endblock %}
